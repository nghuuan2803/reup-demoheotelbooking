@model DemoHotelBooking.ViewModels.BookingView

@{
    ViewData["Title"] = "BookingDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chi tiết đặt phòng</h1>
<div>
    @if (Model.Booking.Status < 3)
    {
        <a onclick="confirm('Xác nhận')" class="btn btn-primary" asp-action="checkin" asp-controller="invoice" asp-route-id="@Model.Booking.Id">Checkin</a>
    }
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Mã đặt phòng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Customer.Id)
        </dd>        <dt class="col-sm-2">
           Khách hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Customer.FullName)
        </dd>
        <dt class="col-sm-2">
            SĐT
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Customer.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.PaymentMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.PaymentMethod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Deposit)
        </dt>
        <dd class="col-sm-10">
            @string.Format("{0:#,0} VNĐ", Model.Booking.Deposit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.CreateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.CheckinDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.CheckinDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.CheckoutDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.CheckoutDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>

<table class="table">
    <tr>
        <th>
            Tên phòng
        </th>
        <th>
            Loại phòng
        </th>
        <th>
            Giá
        </th>
    </tr>
    @foreach (var i in Model.Rooms)
    {
        <tr>
            <td>@i.Room.Name</td>
            <td>@i.Room.Type</td>
            <td>@string.Format("{0:#,0} VNĐ", i.Price)</td>
        </tr>
    }
</table>
<div>
    <a class="text-warning" asp-action="Index">Quay lại</a>
</div>
