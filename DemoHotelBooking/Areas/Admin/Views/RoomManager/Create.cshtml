@model DemoHotelBooking.ViewModels.RoomViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Thêm phòng</h1>

<h4 class="text-danger">@ViewBag.Error</h4>
<hr />

<div class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data" id="createForm" class="field-container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-img">
                    <label asp-for="ImagePath">Upload Image</label>
                    <input type="file" name="image" class="form-control" id="imageUpload" />
                </div>
                <div class="form-img">
                    <img id="Image" src="~/img/no_image.jpg" alt="No Image" />
                </div>
                <div class="col-md-4 col-lg-3" style="padding: 10px">
                    <div class="form-group" style="padding-top: 10px">
                        <label asp-for="Name" class="control-label"></label>
                        <input id="name" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <label asp-for="Type" class="control-label"></label>
                        <input id="type" asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <label asp-for="FloorNumber" class="control-label"></label>
                        <input id="floornumber" asp-for="FloorNumber" class="form-control" />
                        <span asp-validation-for="FloorNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <label asp-for="Price" class="control-label"></label>
                        <input id="price" asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <label asp-for="DAP" class="control-label"></label>
                        <input id="dap" asp-for="DAP" class="form-control" />
                        <span asp-validation-for="DAP" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <label asp-for="MAP" class="control-label"></label>
                        <input id="map" asp-for="MAP" class="form-control" />
                        <span asp-validation-for="MAP" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-lg-3" style="padding: 10px">
                    <div class="form-group" style="padding-top: 10px">
                        <label asp-for="Introduce" class="control-label"></label>
                        <textarea id="introduce" asp-for="Introduce" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Introduce" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea id="description" asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
               
                <div class="form-group text-end" style="padding: 10px">
                    <input id="submit-add" type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-area="Admin" asp-action="AllRoomList" asp-controller="RoomManager">Back to List</a>
</div>

@section Scripts {
    <script>
        document.getElementById('imageUpload').addEventListener('change', function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('Image');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        });
    </script>
}
